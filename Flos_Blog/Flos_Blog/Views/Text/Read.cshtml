@{
    ViewBag.Title = "Read";
}
<section ng-controller="TextsController" ng-init="GetText(); MeasureStayOnText()">
    <article class="text">
        <button ng-click="ScrollToBottom()">Text Herunterladen</button>
        <h2>{{text.TextTitle}}</h2>
        <div ng-bind-html="text.TextContent | html"></div>
        <footer>
            <p>Du kannst den Text als PDF herunterladen. Klicke dazu auf Drucken und wähle anstatt deines Druckers "Speichern als PDF" beim Menüpunkt "Ziel".</p>
            <button ng-click="PrintText()">Drucken</button>
            <!-- AddToAny BEGIN -->
            <div class="a2a_kit a2a_kit_size_32 a2a_default_style" data-a2a-title="{{text.TextTitle}}">
                <a ng-click="ShareText()" class="a2a_dd" href="https://www.addtoany.com/share"></a>
                <a ng-click="ShareText()" class="a2a_button_facebook"></a>
                <a ng-click="ShareText()" class="a2a_button_twitter"></a>
                <a ng-click="ShareText()" class="a2a_button_whatsapp"></a>
                <a ng-click="ShareText()" class="a2a_button_copy_link"></a>
                <a ng-click="ShareText()" class="a2a_button_facebook_messenger"></a>
                <a ng-click="ShareText()" class="a2a_button_email"></a>
            </div>
            <script>
                var a2a_config = a2a_config || {};
                a2a_config.locale = "de";
                a2a_config.templates = {
                    twitter: "Lese Empfehlung: ${title} ${link} von @@FlorianDelvo"
                };
            </script>
            <script async src="https://static.addtoany.com/menu/page.js"></script>
            <!-- AddToAny END -->
        </footer>
    </article>
</section>